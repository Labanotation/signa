<div class="position-relative overflow-hidden p-3 p-md-4 m-md-3 text-center bg-light">
  <div class="card col-md-4 p-lg-1 mx-auto my-1">
    <div class="card-body text-left">
      <h5 class="card-title text-center">{{{__ "resetpassword.title"}}}</h5>
      {{#if success}}
      <div class="alert alert-success text-center">
        <p>Votre mot de passe a bien été réinitialisé.</p>
        <a class="btn btn-outline-secondary bg-light" href="/login">{{{__ "login.submit"}}}</a>
      </div>
      {{else}}
      <form action="/resetpassword/{{token_value}}" method="post">
        <div class="form-group">
          <label for="password">{{{__ "resetpassword.password"}}}</label>
          <input type="password" class="form-control {{#if password_invalid}}is-invalid{{/if}}" name="password"
            autocomplete="new-password" id="password" value="{{password_value}}" required>
          <div class="invalid-feedback">
            {{{__ "signup.password_invalid" }}}
          </div>
          <small id="passwordHelpBlock" class="form-text text-muted">
            {{{__ "signup.password_help" }}}
          </small>
        </div>
        <div class="form-group">
          <label for="confirm_password">{{{__ "resetpassword.confirm_password"}}}</label>
          <input type="password" class="form-control {{#if password_different}}is-invalid{{/if}}"
            name="confirm_password" id="confirm_password" value="{{confirm_password_value}}" required>
          <div class="invalid-feedback">
            {{{__ "signup.password_different" }}}
          </div>
        </div>
        <div class="btn-toolbar justify-content-between">
          <button type="submit" class="btn btn-primary my-2">{{{__ "resetpassword.submit"}}}</button>
        </div>
      </form>
      {{/if}}
    </div>
  </div>
</div>